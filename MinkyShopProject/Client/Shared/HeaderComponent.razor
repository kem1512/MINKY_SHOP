@code {
	bool isLogin = false;

	protected async override Task OnInitializedAsync()
	{
		if(await Session.GetItemAsStringAsync("khachHang") != null)
		{
			isLogin = true;
		}
	}

	async Task DangXuat()
	{
		await Session.RemoveItemAsync("khachHang");
		NavigationManager.NavigateTo("/account");
	}
}