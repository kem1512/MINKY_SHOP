@code{
    private List<BienTheModel> Model = new List<BienTheModel>();

    protected override async Task OnInitializedAsync()
    {
        using (HttpClient httpClient = new HttpClient())
        {
            Model = await httpClient.GetFromJsonAsync<List<BienTheModel>>("https://localhost:7053/api/SanPham") ?? new List<BienTheModel>();
        }
    }

    private async Task Delete(int index){
        using (HttpClient httpClient = new HttpClient())
        {
            await httpClient.DeleteAsync($"https://localhost:7053/api/SanPham?id={Model[index]}");
            Model.Remove(Model[index]);
        }
    }
}